<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" android:thickness="5dp" >
            <stroke android:width="1dip" android:color="@android:color/darker_gray"/>
            <corners android:radius="2dip" />
            <gradient android:angle="-90" android:startColor="@android:color/darker_gray" android:endColor="#ffffff"  />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle" android:thickness="2dp" >
            <corners android:radius="2dip" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" android:thickness="2dp" >
            <corners android:radius="2dip" />
            <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="@android:color/darker_gray" />
        </shape>
    </item>
</selector>